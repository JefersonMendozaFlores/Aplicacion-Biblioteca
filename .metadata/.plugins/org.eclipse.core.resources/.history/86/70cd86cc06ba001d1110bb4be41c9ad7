					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public FrmReporteProveedor() {
		setTitle("Reporte de Proveedor");
		setMaximizable(true);
		setIconifiable(true);
		setClosable(true);
		setDefaultCloseOperation(JFrame.HIDE_ON_CLOSE);
		setBounds(100, 100, 1050, 705);
		getContentPane().setLayout(null);
		
		JLabel lblNewLabel = new JLabel("Reporte de Proveedor");
		lblNewLabel.setFont(new Font("Tahoma", Font.PLAIN, 27));
		lblNewLabel.setHorizontalAlignment(SwingConstants.CENTER);
		lblNewLabel.setBounds(320, 26, 322, 46);
		getContentPane().add(lblNewLabel);
		
		txtNombres = new JTextField();
		txtNombres.setBounds(158, 90, 147, 20);
		getContentPane().add(txtNombres);
		txtNombres.setColumns(10);
		
		JLabel lblNewLabel_1 = new JLabel("Nombres:");
		lblNewLabel_1.setBounds(53, 93, 73, 14);
		getContentPane().add(lblNewLabel_1);
		
